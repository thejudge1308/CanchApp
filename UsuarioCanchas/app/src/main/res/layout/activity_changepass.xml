<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activities.ChangePassActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ingrese su contraseña" />

    <EditText
        android:id="@+id/pass1_edittext_recovery"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Ingrese su nueva contraseña"
        android:inputType="textPassword" />

    <EditText
        android:id="@+id/pass2_edittext_recovery"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Vuelva a ingresar"
        android:inputType="textPassword" />

    <Button
        android:id="@+id/confirmar_hutton_recovery"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cambiar" />
</LinearLayout>