<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/background_light"
    tools:context=".Fragment.CreaEventoFragment">

    <TextView
        android:id="@+id/textView_nuevo_evento"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5px"
        android:text="Nuevo Evento"
        android:textAlignment="center"
        android:textColor="@color/common_google_signin_btn_text_dark_focused"
        android:textSize="24sp" />

    <LinearLayout
        android:id="@+id/textView_nuevo_even"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingLeft="5dp"
        android:paddingRight="2dp"
        android:paddingTop="30dp">


        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <android.support.design.widget.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:autoText="false"
                android:freezesText="false"
                android:hint="Nombre de Evento:"
                android:inputType="textCapWords" />
        </android.support.design.widget.TextInputLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center_horizontal"
            android:orientation="horizontal">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="800"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView_selecciona_deporte"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:gravity="center_vertical"
                    android:text="Selecciona Deporte"
                    android:textAlignment="textStart"
                    android:textAppearance="@style/TextAppearance.AppCompat"
                    android:textSize="16sp" />

                <View
                    android:id="@+id/view2"
                    android:layout_width="match_parent"
                    android:layout_height="2px"
                    android:background="@android:color/darker_gray"></View>

                <TextView
                    android:id="@+id/textView_seleccione_cancha"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:gravity="center_vertical"
                    android:text="Seleccione Cancha"
                    android:textAppearance="@style/TextAppearance.AppCompat"
                    android:textSize="16sp" />

                <View
                    android:id="@+id/view3"
                    android:layout_width="match_parent"
                    android:layout_height="2px"
                    android:background="@android:color/darker_gray"></View>

                <TextView
                    android:id="@+id/textView_fecha_evento"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:gravity="center_vertical"
                    android:text="Fecha Evento"
                    android:textAppearance="@style/TextAppearance.AppCompat"
                    android:textSize="16sp" />

                <View
                    android:id="@+id/view6"
                    android:layout_width="match_parent"
                    android:layout_height="2px"
                    android:background="@android:color/darker_gray"></View>

                <TextView
                    android:id="@+id/textView_hora_inicio"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:gravity="center_vertical"
                    android:text="Hora Inicio"
                    android:textAppearance="@style/TextAppearance.AppCompat"
                    android:textSize="16dp" />

                <View
                    android:id="@+id/view7"
                    android:layout_width="match_parent"
                    android:layout_height="2px"
                    android:background="@android:color/darker_gray"></View>

                <TextView
                    android:id="@+id/textView_hora_termino"
                    android:layout_width="match_parent"
                    android:layout_height="40sp"
                    android:gravity="center_vertical"
                    android:text="Hora Termino"
                    android:textAppearance="@style/TextAppearance.AppCompat"
                    android:textSize="16sp" />

                <View
                    android:id="@+id/view10"
                    android:layout_width="match_parent"
                    android:layout_height="2px"
                    android:background="@android:color/darker_gray"></View>

                <TextView
                    android:id="@+id/textView_equipo1"
                    android:layout_width="match_parent"
                    android:layout_height="40sp"
                    android:gravity="center_vertical"
                    android:text="Seleccionar Equipo 1"
                    android:textAppearance="@style/TextAppearance.AppCompat"
                    android:textSize="16sp" />

                <View
                    android:id="@+id/view11"
                    android:layout_width="match_parent"
                    android:layout_height="2px"
                    android:background="@android:color/darker_gray"></View>

                <TextView
                    android:id="@+id/textView_equipo2"
                    android:layout_width="match_parent"
                    android:layout_height="40sp"
                    android:gravity="center_vertical"
                    android:text="Seleccionar Equipo 2"
                    android:textAppearance="@style/TextAppearance.AppCompat"
                    android:textSize="16sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1600"
                android:orientation="horizontal"></LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="800"
                android:orientation="vertical">

                <Spinner
                    android:id="@+id/spinner"
                    android:layout_width="match_parent"
                    android:layout_height="40dp" />

                <View
                    android:id="@+id/view"
                    android:layout_width="match_parent"
                    android:layout_height="2px"
                    android:background="@android:color/darker_gray"></View>

                <Button
                    android:id="@+id/button_activar_gps"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:text="Buscar Cancha" />

                <View
                    android:id="@+id/view4"
                    android:layout_width="match_parent"
                    android:layout_height="2px"
                    android:background="@android:color/darker_gray"></View>

                <TextView
                    android:id="@+id/textView_fecha_evento_st"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:gravity="center_vertical"
                    android:text="dd/mm/yyyy"
                    android:textAppearance="@style/TextAppearance.AppCompat"
                    android:textSize="16dp" />

                <View
                    android:id="@+id/view8"
                    android:layout_width="match_parent"
                    android:layout_height="2px"
                    android:background="@android:color/darker_gray"></View>

                <TextView
                    android:id="@+id/textView_hora_inicio_st"
                    android:layout_width="match_parent"
                    android:layout_height="40sp"
                    android:gravity="center_vertical"
                    android:text="00:00"
                    android:textAppearance="@style/TextAppearance.AppCompat"
                    android:textSize="16sp" />

                <View
                    android:id="@+id/view9"
                    android:layout_width="match_parent"
                    android:layout_height="2px"
                    android:background="@android:color/darker_gray"></View>

                <TextView
                    android:id="@+id/textView_hora_termino_st"
                    android:layout_width="match_parent"
                    android:layout_height="40sp"
                    android:gravity="center_vertical"
                    android:text="00:00"
                    android:textAppearance="@style/TextAppearance.AppCompat"
                    android:textSize="16sp" />

                <View
                    android:id="@+id/view12"
                    android:layout_width="match_parent"
                    android:layout_height="2px"
                    android:background="@android:color/darker_gray"></View>

                <TextView
                    android:id="@+id/textView_equipo1st"
                    android:layout_width="match_parent"
                    android:layout_height="40sp"
                    android:gravity="center_vertical"
                    android:text="eq1"
                    android:textAppearance="@style/TextAppearance.AppCompat"
                    android:textSize="16sp" />

                <View
                    android:id="@+id/view13"
                    android:layout_width="match_parent"
                    android:layout_height="2px"
                    android:background="@android:color/darker_gray"></View>

                <TextView
                    android:id="@+id/textView_equipo2st"
                    android:layout_width="match_parent"
                    android:layout_height="40sp"
                    android:gravity="center_vertical"
                    android:text="eq2"
                    android:textAppearance="@style/TextAppearance.AppCompat"
                    android:textSize="16sp" />


            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="10px"
            android:orientation="vertical"></LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:background="@android:color/darker_gray"></View>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView_equipo1s"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="Equipo1"
                android:textAlignment="center"
                android:textColor="@color/common_google_signin_btn_text_dark_focused" />

            <TextView
                android:id="@+id/textView_vs"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="V/S"
                android:textAlignment="center"
                android:textColor="@color/common_google_signin_btn_text_dark_focused" />

            <TextView
                android:id="@+id/textView_equipo2s"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="Equipo2"
                android:textAlignment="center"
                android:textColor="@color/common_google_signin_btn_text_dark_focused" />

        </LinearLayout>

        <Button
            android:id="@+id/button2"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="50px"
            android:text="Crear Evento" />

    </LinearLayout>

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <Button
            android:id="@+id/reservarcancha_button_fragmenthome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/crear_partido" />

        <Button
            android:id="@+id/button3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="CREAR EQUIPO" />

        <ListView
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>

</FrameLayout>