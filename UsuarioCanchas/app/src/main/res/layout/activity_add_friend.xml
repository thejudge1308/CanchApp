<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/sendrequest_addfriend_activity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="5dp"
    android:orientation="vertical"
    tools:context=".Activities.AddFriendActivity">


    <TextView
        android:id="@+id/textView13"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:text="Escribe el email de tu amigo." />

    <EditText
        android:id="@+id/email_addfriend_activity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:ems="10"
        android:inputType="textEmailAddress" />

    <Button
        android:id="@+id/sendrequest_addfriend_activity1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Enviar solicitud" />
</LinearLayout>